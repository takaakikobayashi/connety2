<div class="container">
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">

    <div class="r-index">
      <h4><mark>募集企業一覧</mark></h4>
    </div>

    <% if @offers.empty? %>
    <p style="text-align: center">現在募集企業はありません</p>
    <% else %>
    <div class="col-xs-8">
      <div class="product-index-box">
      <% @offers.each do |offer| %>
            <div class="product-index-image">
              <%= attachment_image_tag offer, :image, :fill, 350, 250, format: "jpg", fallback: "no-image.jpg", size:'80x80' %>
              <p><%= link_to offer.company.name, user_show_offers_path(user_id: current_user.id,company_id: offer.company_id,id: offer.id) %></p>
              <p><%= offer.name %></p>
              <p>
              	<%= offer.appeal_point %>
              </p>
            </div>
      <% end %>
      </div>
    </div>
    <% end %>

  </div>
</div>
</div>