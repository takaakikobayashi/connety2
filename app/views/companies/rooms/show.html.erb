<div class="row">
  
  <div class="col-xs-10 col-xs-offset-1">
    <h1>DM</h1>
    <h4>参加者</h4>
    <%= @user.full_name %>さん
    <%= @company.name %>

    <hr>
  </div>

  <div class="col-xs-6 col-xs-offset-3">
    <% if @messages.present? %>
      <% @messages.each do |m| %>
        <div class="message">
          <li>
            <% if m.user_id.nil? %>
              <p class="says-r"><strong><%= m.mail %></strong></p>
              <div style="text-align:right">
                <small>by <strong><%= @company.name %></a></strong></small>
              </div>
            <% else %>
              <p class="says"><strong><%= m.mail %></strong></p>
              <small>by <strong><%= @user.full_name %>さん</a></strong></small>
            <% end %>
          </li>
        </div>
      <% end %>   
    <% else %>
      <h3 class="text-center">メッセージはまだありません</h3>
    <% end %>

    <div class="message-form">
      <%= form_for @message, url: messages_path do |f| %>
        <%= f.text_area :mail, placeholder: "メッセージを入力して下さい", size: "65×10" %>
        <%= f.hidden_field :room_id, :value => @room.id %>
        <% if current_user.nil? %>
          <%= f.hidden_field :company_id, :value => @company.id %>
        <% else %>
          <%= f.hidden_field :user_id, :value => @user.id %>
        <% end %><br>
        <input class="btn-square" type="submit" name="submit" value="送信する">
      <% end %>
    </div>
  </div>

</div>

