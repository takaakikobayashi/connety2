<div class="container">
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">

    <div class="problem">
      <h4><mark>登録求人一覧</mark></h4>
    </div>

    <div class="col-xs-8">
  	  <%=  link_to "求人新規登録", company_new_offers_path(current_company.id), class:"btn btn-primary"%>

<% if @offers.empty? %>
<p>現在登録中の求人はありません</p>
<% else %>
<div class="product-index-box">
      <% @offers.each do |offer| %>
            <div class="product-index-image">
              <%= attachment_image_tag offer, :image, :fill, 350, 250, format: "jpg", fallback: "no-image.jpg", size:'80x80' %>
              <p><%= link_to current_company.name, company_show_offers_path(company_id: current_company.id,id: offer.id) %></p>
              <p>
              	<%= offer.appeal_point %>
                  <span style="color:red">評価</span>
              </p>
            </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
</div>
</div>