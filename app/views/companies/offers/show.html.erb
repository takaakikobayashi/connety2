<table border="0">

	<tr style="height:70px">
            <th></th>
            <td>
        	<%= attachment_image_tag @offer, :image, :fill, 350, 250, format: "jpg", fallback: "no-image.jpg", size:'350x250' %>
        	</td>
        </tr>

        <tr><th>公開状態</th>
      <td><% if @offer.is_active == true %>
      <p>公開</p>
      <% else %>
      <p>非公開</p>
      <% end %></td></tr>

        <tr style="height:70px">
            <th class="form">会社名</th>
            <td><%= current_company.name %></td>
        </tr>

        <tr style="height:70px">
            <th>業種</th>
            <td>
              <td><%= @offer.industry %></td>
            </td>
        </tr>

        <tr style="height:70px">
            <th>職種</th>
            <td>
              <td><%= @offer.occupation %></td>
            </td>
        </tr>

        <tr style="height:70px">
            <th>勤務地</th>
            <td>
              <td><%= @offer.work_location %></td>
            </td>
        </tr>

        <tr style="height:70px">
            <th>アピールポイント</th>
            <td>
              <td><%= @offer.appeal_point %></td>
            </td>
        </tr>

        <tr style="height:70px">
            <th>仕事内容</th>
            <td>
              <td><%= @offer.job_description %></td>
            </td>
        </tr>

        <tr style="height:70px">
            <th>雇用形態</th>
            <td>
              <td><%= @offer.employment_status %></td>
            </td>
        </tr>

        <tr style="height:70px">
            <th>勤務時間</th>
            <td>
              <td><%= @offer.working_hour %></td>
            </td>
        </tr>

        <tr style="height:70px">
            <th>給与</th>
            <td>
              <td><%= @offer.salary %></td>
            </td>
        </tr>

        <tr style="height:70px">
            <th>募集要件</th>
            <td>
              <td><%= @offer.application_condition %></td>
            </td>
        </tr>

        <tr style="height:70px">
            <th>休日休暇</th>
            <td>
              <td><%= @offer.vacation %></td>
            </td>
        </tr>

        <tr style="height:70px">
            <th>福利厚生</th>
            <td>
              <td><%= @offer.welfare %></td>
            </td>
        </tr>

      </table>

      <% if @offer.is_active == true %>
      <%= link_to "非公開にする", company_delete_offers_path(company_id: current_company.id,id: @offer.id), method: :patch, class:"btn btn-danger"%>
      <% else %>
      <%= link_to "公開する", company_release_offers_path(company_id: current_company.id,id: @offer.id), method: :patch, class: 'btn btn-success' %>
      <% end %>