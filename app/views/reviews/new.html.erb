

  <div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-8">
      <div class="sign_up">
        <mark>新規会員登録</mark>
      </div>

      

      <%= form_for @review, url: new_user_review_path do |f| %>
      
      <table border="0">
        <tr style="height:70px">
            <th class="form">今日のテーマ</th>
            <td>
              <% if @reviews.nil? %>
              <p>登録がありません</p>
              <% else %>
              <%= @reviews.theme %>
              <% end %> 
            </td>
        </tr>

        <tr style="height:70px">
            <th>できたこと</th>
            <td>
              <% f.label :completion %>
              <%= f.text_field :completion, autofocus: true, autocomplete: "completion", class: "form-control" %>
            </td>
        </tr>

        <tr style="height:70px">
            <th>できなかったこと</th>
            <td>
              <% f.label :halfway %>
              <%= f.text_field :halfway, autofocus: true, autocomplete: "halfway", class: "form-control" %>
            </td>
        </tr>

        <tr style="height:70px">
            <th>明日のテーマ</th>
            <td>
              <% f.label :theme %>
              <%= f.text_field :theme, autofocus: true, autocomplete: "theme", class: "form-control" %>
            </td>
        </tr>

      </table>
      <div class="actions">
        <%= f.submit "新規登録", class:"btn btn-success center-block", style:"width:150px" %>
      </div>
      
      <% end %>
      

      
    </div>
  </div>