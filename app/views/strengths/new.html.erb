<div class="row">
  <div class="col-xs-8 col-xs-offset-4">
    <div class="sign_up">
      <h4><mark>自己PR新規登録</mark></h4>
    </div>

    <%= form_for @strength, url: new_user_strength_path do |f| %>
      <%= render "layouts/error_message", title: @strength %>
      
      <table border="0">
        <tr style="height:70px">
          <th style="width:150px">名前</th>
          <td>
            <%= current_user.last_name %>
            <%= current_user.first_name %>
          </td>
        </tr>

        <tr style="height:70px">
          <th>学年</th>
          <td><%= current_user.grade %></td>
        </tr>

        <tr style="height:70px">
          <th>スキル</th>
          <td>
            <% f.label :skill %>
            <%= f.text_area :skill, autofocus: true, autocomplete: "skill", class: "form-control" %>
          </td>
        </tr>

        <tr style="height:70px">
          <th>希望</th>
          <td>
            <% f.label :expection %>
            <%= f.text_area :expection, autofocus: true, autocomplete: "expection", class: "form-control" %>
          </td>
        </tr>

        <tr style="height:70px">
          <th>アピールポイント</th>
          <td>
            <% f.label :appeal_point %>
            <%= f.text_area :appeal_point, autofocus: true, autocomplete: "appeal_point", class: "form-control" %>
          </td>
        </tr>

        <tr style="height:70px">
          <th>ポートフォリオ</th>
          <td>
            <% f.label :portfolio %>
            <%= f.text_area :portfolio, autofocus: true, autocomplete: "portfolio", class: "form-control" %>
          </td>
        </tr>
      </table>

      <div class="actions">
        <%= f.submit "登録", class:"btn btn-success center-block", style:"width:150px" %>
      </div>
      
    <% end %>
      
    </div>
  </div>