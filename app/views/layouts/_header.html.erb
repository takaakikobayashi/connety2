          <li class="header-link"><%= link_to "商品一覧", "#", class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "カート", "#", class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "ログアウト", "#", method: :delete, class: "btn btn-default" %></li>
        </ul>
        <% else %>
        <div class="logo-box navber-brand">
          <%=link_to "#", root_path %>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li class="header-link"><%= link_to "About", home_about_path, class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "新規登録", new_user_registration_path, class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "ログイン", new_user_session_path, class: "btn btn-default" %></li>
        </ul>
      <% end %>
    </div>
