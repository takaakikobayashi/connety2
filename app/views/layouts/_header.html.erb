<header class="navbar navbar-fixed-top navbar-light">
    <div class="container">
      <% if user_signed_in? %>
        <div class="logo-box navber-brand">
          <%=link_to image_tag("connety.png", alt:"Connety", width:"280px", height:"80px"), user_scholastic_records_path(current_user) %>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li class="header-link"><%= link_to user_notifications_path(current_user) do %>
            <% if user_unchecked_notifications.any? %>
              <i class="far fa-bell my-notification"></i>
              <i class="fas fa-circle notification-circle" ></i>
            <% else %>
              <i class="far fa-bell my-notification"></i>
            <% end %>
          <% end %></li>
          <li class="header-link"><%= link_to messages_path do %>
            <% if user_message_unchecked_notifications.any? %>
              <i class="far fa-envelope my-message"></i>
              <i class="fas fa-circle notification-circle" ></i>
            <% else %>
              <i class="far fa-envelope my-message"></i>
            <% end %>
          <% end %></li>
          <li class="header-link"><%= link_to "マイページ", user_path(current_user), class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "オファーを確認する", user_orders_path(current_user), class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "募集企業を探す", user_offers_path(current_user), class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-default" %></li>
        </ul>
        <% elsif requester_signed_in? %>
        <div class="logo-box navber-brand">
          <%=link_to image_tag("connety.png", alt:"Connety", width:"280px", height:"80px"), requesters_path %>
        </div>
         <ul class="nav navbar-nav navbar-right">
          <li class="header-link"><%= link_to requester_index_notifications_path(current_requester) do %>
            <% if requester_unchecked_notifications.any? %>
              <i class="far fa-bell my-notification"></i>
              <i class="fas fa-circle notification-circle" ></i>
            <% else %>
              <i class="far fa-bell my-notification"></i>
            <% end %>
          <% end %></li>
          <li class="header-link"><%= link_to requester_requester_message_path(current_requester) do %>
            <% if requester_message_unchecked_notifications.any? %>
              <i class="far fa-envelope my-message"></i>
              <i class="fas fa-circle notification-circle" ></i>
            <% else %>
              <i class="far fa-envelope my-message"></i>
            <% end %>
          <% end %></li>
          <li class="header-link"><%= link_to "タイムライン", requesters_path, class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "マイページ", requester_path(current_requester), class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "ユーザー一覧", requester_requester_strengths_path(current_requester), class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "ログアウト", destroy_requester_session_path, method: :delete, class: "btn btn-default" %></li>
        </ul>
        <% elsif company_signed_in? %>
        <div class="logo-box navber-brand">
          <%=link_to image_tag("connety.png", alt:"Connety", width:"280px", height:"80px"), companies_path %>
        </div>
         <ul class="nav navbar-nav navbar-right">
          <li class="header-link"><%= link_to company_index_notifications_path(current_company) do %>
            <% if company_unchecked_notifications.any? %>
              <i class="far fa-bell my-notification"></i>
              <i class="fas fa-circle notification-circle" ></i>
            <% else %>
              <i class="far fa-bell my-notification"></i>
            <% end %>
          <% end %></li>
          <li class="header-link"><%= link_to company_company_message_path(current_company) do %>
            <% if company_message_unchecked_notifications.any? %>
              <i class="far fa-envelope my-message"></i>
              <i class="fas fa-circle notification-circle" ></i>
            <% else %>
              <i class="far fa-envelope my-message"></i>
            <% end %>
          <% end %></li>
          <li class="header-link"><%= link_to "タイムライン",companies_path, class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "マイページ",company_path(current_company), class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "ユーザー一覧", company_company_strengths_path(current_company), class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "ログアウト", destroy_company_session_path, method: :delete, class: "btn btn-default" %></li>
        </ul>
        <% elsif admin_signed_in? %>
        <div class="logo-box navber-brand">
          <%=link_to image_tag("connety.png", alt:"Connety", width:"280px", height:"80px"), admins_scholastic_records_path %>
        </div>
         <ul class="nav navbar-nav navbar-right">
          <li class="header-link"><%= link_to "マイページ", admins_mypage_path, class: "btn btn-default" %></li>
