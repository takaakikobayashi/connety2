<header class="navbar navbar-fixed-top navbar-light">
    <div class="container">
      <% if user_signed_in? %>
        <div class="logo-box navber-brand">
          <%=link_to "#", user_scholastic_records_path(current_user) %>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li class="header-name"><%= current_user.last_name %></li>
          <li class="header-link"><%= link_to "通知", user_notifications_path(current_user), class: "btn btn-default" %></li>
          <%# if unchecked_notifications.any? %>
          <%#i class="fa fa-circle notification-circle"></i>
          <% end %>
          <li class="header-link"><%= link_to "マイページ", user_path(current_user), class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "About", home_about_path, class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "募集企業を探す", user_offers_path(current_user), class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-default" %></li>
        </ul>
        <% elsif requester_signed_in? %>
        <div class="logo-box navber-brand">
          <%=link_to "#", root_path %>
        </div>
         <ul class="nav navbar-nav navbar-right">
          <li class="header-name"><%= current_requester.name %></li>
          <li class="header-link"><%= link_to "通知", requester_notifications_path(current_requester), class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "マイページ", requester_path(current_requester), class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "About", requesters_about_path, class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "ユーザー一覧", requester_requester_strengths_path(current_requester), class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "ログアウト", destroy_requester_session_path, method: :delete, class: "btn btn-default" %></li>
        </ul>
        <% elsif company_signed_in? %>
        <div class="logo-box navber-brand">
          <%=link_to "#", root_path %>
        </div>
         <ul class="nav navbar-nav navbar-right">
          <li class="header-name"><%= current_company.name %></li>
          <li class="header-link"><%= link_to "通知", company_notifications_path(current_company), class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "マイページ",company_path(current_company), class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "About", companies_about_path, class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "ユーザー一覧", company_company_strengths_path(current_company), class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "ログアウト", destroy_company_session_path, method: :delete, class: "btn btn-default" %></li>
        </ul>
        <% elsif admin_signed_in? %>
        <div class="logo-box navber-brand">
          <%=link_to "#", root_path %>
        </div>
         <ul class="nav navbar-nav navbar-right">
          <li class="header-name"><%= current_admin.name %></li>
          <li class="header-link"><%= link_to "案件一覧", admins_orders_path, class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "タイムライン", admins_scholastic_records_path, class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "登録企業一覧", admins_companies_path, class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "ユーザー一覧", admins_users_path, class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-default" %></li>
        </ul>
        <% else %>
        <div class="logo-box navber-brand">
          <%=link_to "#", root_path %>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li class="header-link"><%= link_to "About", home_about_path, class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "新規登録", new_user_registration_path, class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "ログイン", new_user_session_path, class: "btn btn-default" %></li>
        </ul>
      <% end %>
    </div>
</header>