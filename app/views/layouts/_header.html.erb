        <div class="logo-box navber-brand">
          <%=link_to "#", root_path %>
        </div>
         <ul class="nav navbar-nav navbar-right">
          <li class="header-name"><%= current_requester.name %></li>
          <li class="header-link"><%= link_to "マイページ", "#", class: "btn btn-default" %></li>
          <li class="header-link"><%= link_to "About", "#", class: "btn btn-default" %></li>
