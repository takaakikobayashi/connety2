    <div class="c-index">
      <h4><mark>案件一覧</mark></h4>
    </div>

    <table class="table table-bordered">
      <tr>
        <th>発注日</th>
        <th>発注者</th>
        <th>発注相手</th>
        <th>依頼内容</th>
        <th>依頼額</th>
        <th>進捗ステータス</th>
        <th>依頼詳細</th>
      </tr>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= order.requester.name %></td>
          <td><%= order.user.full_name %></td>
          <td><%= order.request_content %></td>
          <td><%= order.cost %>円</td>
          <td><%= order.progress_status %></td>
          <td><%= link_to "依頼詳細", admins_order_path(order.id), class:"btn btn-success"%></td>
        </tr>
      <% end %>
    </table>