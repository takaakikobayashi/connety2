

  <div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-8">
      <div class="sign_up">
        <mark>新規会員登録</mark>
      </div>

      
     <table border="0">
        <tr style="height:70px">
            <th class="form">名前</th>
            <td><%= @user.user_name %></td>
        </tr>

        <tr style="height:70px">
            <th>学年</th>
            <td><%= @user.grade %></td>
        </tr>

        <tr style="height:70px">
            <th>スキル</th>
            <td><%= @strength.skill %></td>
        </tr>

        <tr style="height:70px">
            <th>希望</th>
            <td><%= @strength.expection %></td>
        </tr>

        <tr style="height:70px">
            <th>アピールポイント</th>
            <td><%= @strength.appeal_point %></td>
        </tr>

        <tr style="height:70px">
            <th>ポートフォリオ</th>
            <td><%= @strength.portfolio %></td>
        </tr>

      </table>
      
      <%=link_to "日々の振り返り", requester_requester_reviews_path(current_requester.id),class: "btn btn-primary", style:"margin-right:30px" %>
      <%=link_to "問題解決", requester_requester_problem_solutions_path(current_requester.id),class: "btn btn-primary", style:"margin-right:30px" %>
      <%=link_to "オファーする", requester_new_orders_path(requester_id: current_requester.id,user_id: @user.id),class: "btn btn-primary", style:"margin-right:30px" %>
      
    </div>
  </div>