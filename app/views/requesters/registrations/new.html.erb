<div class="row">
  <div class="col-xs-8 col-xs-offset-2">

    <div class="sign_up">
      <h3><mark>発注者新規会員登録</mark></h3>
    </div> 

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <table border="0">
        <tr style="height:70px">
          <th class="form">名前</th>
          <td>
            <% f.label :name %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
          </td>
        </tr>

        <tr style="height:70px">
          <th>会社名/個人事業主</th>
          <td>
            <% f.label :business_name %>
            <%= f.text_field :business_name, autofocus: true, autocomplete: "business_name", class: "form-control" %>
          </td>
        </tr>

        <tr style="height:70px">
          <th>郵便番号</th>
          <td>
            <% f.label :postal_code %>
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control" %>
          </td>
        </tr>

        <tr style="height:70px">
          <th>会社住所</th>
          <td>
            <% f.label :address %>
            <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %>
          </td>
        </tr>

        <tr style="height:70px">
          <th>メールアドレス</th>
          <td>
            <% f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </td>
        </tr>

        <tr style="height:70px">
          <th>電話番号(ハイフンなし)</th>
          <td>
            <% f.label :phone_number %>
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "form-control" %>
          </td>
        </tr>

        <tr style="height:70px">
          <th>パスワード</th>
          <td>
            <% f.label :password %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </td>
        </tr>

        <tr style="height:70px">
          <th>パスワード確認</th>
          <td>
            <% f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </td>
        </tr>

      </table>

      <a href="/home/privacy_policy">プライバシーポリシー</a>及び<a href="/home/terms">利用規約</a>に同意したとみなします。

      <div class="actions">
        <%= f.submit "上記に同意して登録する", class:"btn btn-success center-block btn-lg", style:"width:250px" %>
      </div>
      
    <% end %>
      
    <div class="sign_in_page">
      <h4><mark>既に登録済みの方</mark></h4>
      <p><%= link_to "こちら", new_requester_session_path %>からログインしてください</p>
    </div>

  </div>
</div>