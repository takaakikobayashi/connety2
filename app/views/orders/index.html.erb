<table class="table table-bordered">
    	<tr>
    		<th>受付日</th>
            <th>オファー相手</th>
    		<th>オファー内容</th>
    		<th>オファー詳細</th>
            <th>オファー額</th>
            <th></th>
    	</tr>
        <% @orders.each do |order| %>
    	<tr>
    		<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
    		<td><%= order.requester.name %></td>
    		<td><%= order.request_content %></td>
            <td><%= order.request_detail %></td>
            <td><%=  link_to "受諾", user_asset_orders_path(user_id: current_user.id,id: order.id), method: :patch, class:"btn btn-success"%>
          <%=  link_to "お断り", user_refuse_orders_path(user_id: current_user.id,id: order.id), method: :patch, class:"btn btn-danger"%></td>
    	</tr>
        <% end %>
    </table>