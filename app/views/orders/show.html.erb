      <table border="0">
        <tr style="height:70px">
            <th class="form">依頼額</th>
            <td>
              <%= @order.cost %>
            </td>
        </tr>

        <tr style="height:70px">
            <th>依頼内容</th>
            <td>
              <%= @order.request_content %>
            </td>
        </tr>

        <tr style="height:70px">
            <th>依頼詳細</th>
            <td>
              <%= @order.request_detail %>
            </td>
        </tr>

      </table>

      <% if @room.present? %>
        <%=  link_to "DM", user_room_path(user_id: current_user.id,id: @room.id), class:"btn btn-primary"%>
      <% else %>
        <%=  form_for @newroom, url: user_rooms_path do |f| %>
          <%= fields_for @requester do |u| %>
            <%= u.hidden_field :requester_id, :value=> @order.requester.id %>
          <% end %>
          <%= f.submit "DM",class: 'btn btn-primary', style:"margin-right:130px" %>
        <% end %>
      <% end %>
    