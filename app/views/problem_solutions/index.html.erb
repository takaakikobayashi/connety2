<div class="row">
  <div class="col-xs-10 col-xs-offset-1">

    <%=link_to "問題解決をする", new_user_problem_solution_path(current_user.id),class: "btn btn-primary", style:"margin: 30px" %>

    <table class="table table-bordered">
      <tr>
    	<th>日付</th>
        <th>達成できたこと</th>
    	<th>できなかった原因</th>
        <th>どのようにすれば</th>
        <th>解決策</th>
      </tr>
      <% @problem_solutions.each do |problem_solution| %>
    	<tr>
    	  <td><%= problem_solution.created_at.strftime('%Y/%m/%d') %></td>
    	  <td><%= problem_solution.worked %></td>
    	  <td><%= problem_solution.not_worked %></td>
          <td><%= problem_solution.solution %></td>
          <td><%= problem_solution.improvement_point %></td>
    	</tr>
      <% end %>
    </table>

  </div>
</div>