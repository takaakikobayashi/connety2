<div class="row">
  <div class="col-xs-8 col-xs-offset-4">
    <div class="sign_up">
      <mark>新規問題解決</mark>
    </div>

      <%= form_for @problem_solution, url: new_user_problem_solution_path do |f| %>
      
      <table border="0">
        <tr style="height:70px">
          <th class="form">達成できたこと</th>
          <td>
            <% f.label :worked %>
            <%= f.text_area :worked, autofocus: true, autocomplete: "worked", class: "form-control" %>
          </td>
        </tr>

        <tr style="height:70px">
          <th>達成できなかった原因</th>
          <td>
            <% f.label :not_worked %>
            <%= f.text_area :not_worked, autofocus: true, autocomplete: "not_worked", class: "form-control" %>
          </td>
        </tr>

        <tr style="height:70px">
          <th>どのようにすれば解決できたか</th>
          <td>
            <% f.label :solution %>
            <%= f.text_area :solution, autofocus: true, autocomplete: "solution", class: "form-control" %>
          </td>
        </tr>

        <tr style="height:70px">
          <th>繰り返さないための解決策</th>
          <td>
            <% f.label :improvement_point %>
            <%= f.text_area :improvement_point, autofocus: true, autocomplete: "improvement_point", class: "form-control" %>
          </td>
        </tr>

      </table>

      <div class="actions">
        <%= f.submit "登録", class:"btn btn-success center-block", style:"width:150px" %>
      </div>
      
      <% end %>
      
    </div>
  </div>